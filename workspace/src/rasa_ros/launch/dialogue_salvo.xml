<launch>
    <arg name="node_start_delay" default="1.0" />  
    <node pkg="rasa_ros" name="dialogue_server" type="dialogue_server_salvo.py" output="screen" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' "/>
    <node pkg="rasa_ros" name="dialogue_interface" type="dialogue_interface.py" output="screen" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' "/>
</launch>
